<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginRight="100dp"
    android:layout_marginLeft="100dp"
    android:elevation="28dp"
    android:backgroundTint="@color/teal_200"
    app:cardBackgroundColor="@color/teal_200"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/userbg">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_image_search"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/profile"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/user_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome usuario"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@id/user_profile_image_search"
            />

        <TextView
            android:id="@+id/user_full_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome completo"
            android:gravity="center"
            android:textSize="15.5sp"
            android:maxLength="18"
            android:layout_marginTop="3dp"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:layout_below="@id/user_name_search"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/follow_btn_search"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:text="seguir"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@color/pink_secondary"
            android:layout_below="@id/user_full_name_search"
            />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>